<div class="bs-docs-section">
  <div class="row">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :role => "form", :multipart => true}) do |f| %>
      <%= devise_error_messages! %>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-6">
        <%= f.text_field :username, :type => "text", :class => "form-control", :placeholder => "Имя пользователя"%>
      </div>
    </div>

      <div class="form-group">
        <div class="col-lg-offset-3 col-lg-6">
          <%= f.email_field :email, :type => "email", :class => "form-control", :id => "inputEmail1", :placeholder => "Ваш email"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-3 col-lg-6">
          <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Пароль" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-3 col-lg-6">
          <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Повторите пароль" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-3 col-lg-6">
          <div style="width: 100%;"><%= f.submit "ПОЕХАЛИ!", :class => "btn btn-success" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>