= form_for @product_item do |f|
  - if @product_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_item.errors.count, "error")} prohibited this product_item from being saved:"
      %ul
        - @product_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit 'Save'
